<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteSmoke"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40pt"
            android:background="@color/colorWhiteSmoke"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/vehicle_plant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/colorBlack"
                    android:text="--" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/professional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:text="--" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="245pt"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/id_pic"
                    android:layout_marginTop="10pt"
                    android:layout_width="320pt"
                    android:layout_height="200pt"
                    android:scaleType="fitXY"
                    android:src="@drawable/id_card"
                    />
                <TextView
                    android:layout_width="290pt"
                    android:layout_height="25pt"
                    android:gravity="center_vertical"
                    android:text="请核对扫描信息，确认无误"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:orientation="vertical"
                android:background="@color/colorGrey"
                />
        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginLeft="20pt"
                android:layout_marginRight="20pt"
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40pt"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:background="@null"
                    android:text="姓名:"
                    android:textSize="15sp"
                    />

                <EditText
                    android:id="@+id/id_name"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:textAlignment="textEnd"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:textColor="@color/colorBlack"
                    android:singleLine="true"
                    android:maxLength="8"
                    android:text=""
                    android:textSize="15sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:orientation="vertical"
                android:background="@color/colorGrey"
                />
            <RelativeLayout
                android:layout_marginLeft="20pt"
                android:layout_marginRight="20pt"
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40pt"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="性别:"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/id_sex"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical|end"
                    android:textColor="@color/colorBlack"
                    android:text=""
                    android:textSize="15sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:orientation="vertical"
                android:background="@color/colorGrey"
                />
            <RelativeLayout
                android:layout_marginLeft="20pt"
                android:layout_marginRight="20pt"
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40pt"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorBlack"
                    android:background="@null"
                    android:text="身份证:"
                    android:textSize="15sp"
                    />

                <EditText
                    android:id="@+id/id_number"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:textAlignment="textEnd"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:inputType="textVisiblePassword"
                    android:digits="0123456789X"
                    android:textColor="@color/colorBlack"
                    android:singleLine="true"
                    android:maxLength="18"
                    android:text=""
                    android:textSize="15sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:orientation="vertical"
                android:background="@color/colorGrey"
                />
        </LinearLayout>
            <RelativeLayout
                android:layout_marginLeft="20pt"
                android:layout_marginRight="20pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:orientation="vertical">

                <Button
                    android:id="@+id/submit_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ocr_shape"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:text="确认上传" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>