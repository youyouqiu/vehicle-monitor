<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteSmoke"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40pt"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/vehicle_plant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:text="--" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="245pt"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/id_pic"
                    android:layout_marginTop="10pt"
                    android:layout_width="320pt"
                    android:layout_height="200pt"
                    android:scaleType="fitXY"
                    android:src="@drawable/driving_license_1"
                    />
                <TextView
                    android:layout_width="290pt"
                    android:layout_height="25pt"
                    android:gravity="center_vertical"
                    android:text="请核对扫描信息，确认无误"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:orientation="vertical"
                android:background="@color/colorGrey"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite">

                <RelativeLayout
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40pt"
                        android:background="@null"
                        android:gravity="center"
                        android:text="车架号:"
                        android:textAlignment="gravity"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/chassisNumber"
                        android:layout_width="match_parent"
                        android:layout_height="40pt"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:textAlignment="textEnd"
                        android:background="@null"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:textColor="@color/colorBlack"
                        android:singleLine="true"
                        android:maxLength="17"
                        android:inputType="text"
                        android:text="--"
                        android:textSize="15sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:orientation="vertical"
                    android:background="@color/colorGrey"
                    />

                <RelativeLayout
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40pt"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:background="@null"
                        android:text="发动机号:"
                        android:textSize="15sp"
                        />

                    <EditText
                        android:id="@+id/engineNumber"
                        android:layout_width="match_parent"
                        android:layout_height="40pt"
                        android:textAlignment="textEnd"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:textColor="@color/colorBlack"
                        android:singleLine="true"
                        android:maxLength="15"
                        android:text="--"
                        android:textSize="15sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:orientation="vertical"
                    android:background="@color/colorGrey"
                    />

                <RelativeLayout
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40pt"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:background="@null"
                        android:text="使用性质:"
                        android:textSize="15sp"
                        />

                    <EditText
                        android:id="@+id/usingNature"
                        android:layout_width="match_parent"
                        android:layout_height="40pt"
                        android:textAlignment="textEnd"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:textColor="@color/colorBlack"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:text="--"
                        android:textSize="15sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:orientation="vertical"
                    android:background="@color/colorGrey"
                    />

                <RelativeLayout
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40pt"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:background="@null"
                        android:text="品牌型号:"
                        android:textSize="15sp"
                        />

                    <EditText
                        android:id="@+id/brandModel"
                        android:layout_width="match_parent"
                        android:layout_height="40pt"
                        android:textAlignment="textEnd"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:textColor="@color/colorBlack"
                        android:singleLine="true"
                        android:maxLength="20"
                        android:text="--"
                        android:textSize="15sp"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:orientation="vertical"
                    android:background="@color/colorGrey"
                    />

                <RelativeLayout
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40pt"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:background="@null"
                        android:text="注册日期:"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/registrationDate"
                        android:layout_width="match_parent"
                        android:layout_height="40pt"
                        android:gravity="center_vertical|end"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:inputType="none"
                        android:background="@null"
                        android:textColor="@color/colorBlack"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:text="--"
                        android:textSize="15sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:orientation="vertical"
                    android:background="@color/colorGrey"
                    />

                <RelativeLayout
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40pt"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:background="@null"
                        android:text="发证日期:"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/licenseIssuanceDate"
                        android:layout_width="match_parent"
                        android:layout_height="40pt"
                        android:gravity="center_vertical|end"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:inputType="none"
                        android:background="@null"
                        android:textColor="@color/colorBlack"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:text="--"
                        android:textSize="15sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:orientation="vertical"
                    android:background="@color/colorGrey"
                    />
            </LinearLayout>
                <RelativeLayout
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20pt"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/submit_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ocr_shape"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite"
                        android:text="确认上传" />
                </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>