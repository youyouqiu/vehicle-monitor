<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteSmoke"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40pt"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/vehicle_plant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:text="--" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="245pt"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/id_pic"
                    android:layout_marginTop="10pt"
                    android:layout_width="320pt"
                    android:layout_height="200pt"
                    android:scaleType="fitXY"
                    android:src="@drawable/driving_license_2"
                    />
                <TextView
                    android:layout_width="290pt"
                    android:layout_height="25pt"
                    android:gravity="center_vertical"
                    android:text="请核对扫描信息，确认无误"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:orientation="vertical"
                android:background="@color/colorGrey"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite">

                <RelativeLayout
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40pt"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:background="@null"
                        android:text="校验有效期至:"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/validEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="40pt"
                        android:gravity="center_vertical|end"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:inputType="none"
                        android:background="@null"
                        android:textColor="@color/colorBlack"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:text="--"
                        android:textSize="15sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:orientation="vertical"
                    android:background="@color/colorGrey"
                    />

                <RelativeLayout
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40pt"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:background="@null"
                        android:text="总质量（kg）:"
                        android:textSize="15sp"
                        />

                    <EditText
                        android:id="@+id/totalQuality"
                        android:layout_width="match_parent"
                        android:layout_height="40pt"
                        android:textAlignment="textEnd"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:textColor="@color/colorBlack"
                        android:singleLine="true"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:maxLength="8"
                        android:text="--"
                        android:textSize="15sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:orientation="vertical"
                    android:background="@color/colorGrey"
                    />

                <RelativeLayout
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40pt"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:background="@null"
                        android:text="廓尺寸-长（mm）:"
                        android:textSize="15sp"
                        />

                    <EditText
                        android:id="@+id/profileSizeLong"
                        android:layout_width="match_parent"
                        android:layout_height="40pt"
                        android:textAlignment="textEnd"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:textColor="@color/colorBlack"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:singleLine="true"
                        android:maxLength="8"
                        android:text="--"
                        android:textSize="15sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:orientation="vertical"
                    android:background="@color/colorGrey"
                    />

                <RelativeLayout
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40pt"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:background="@null"
                        android:text="外廓尺寸-宽（mm）:"
                        android:textSize="15sp"
                        />

                    <EditText
                        android:id="@+id/profileSizeWide"
                        android:layout_width="match_parent"
                        android:layout_height="40pt"
                        android:textAlignment="textEnd"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:textColor="@color/colorBlack"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:singleLine="true"
                        android:maxLength="8"
                        android:text="--"
                        android:textSize="15sp"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:orientation="vertical"
                    android:background="@color/colorGrey"
                    />

                <RelativeLayout
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40pt"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:background="@null"
                        android:text="外廓尺寸-高（mm）:"
                        android:textSize="15sp"
                        />

                    <EditText
                        android:id="@+id/profileSizeHigh"
                        android:layout_width="match_parent"
                        android:layout_height="40pt"
                        android:textAlignment="textEnd"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:textColor="@color/colorBlack"
                        android:singleLine="true"
                        android:maxLength="8"
                        android:text="--"
                        android:textSize="15sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:orientation="vertical"
                    android:background="@color/colorGrey"
                    />
            </LinearLayout>
                <RelativeLayout
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20pt"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/submit_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ocr_shape"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite"
                        android:text="确认上传" />
                </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>